DELIMITER //
CREATE PROCEDURE user_photo_quantity_likes (photo INT(11))
BEGIN 
SELECT `photos`.`name` AS 'Фотографии',
SUM( 
  (`photos_likes`.`recalled` IS NULL) 
  AND 
  (`photos_likes`.`photo_id` = photo)
) AS 'Поставили лайки',  
SUM( 
  (`photos_likes`.`recalled` IS NOT NULL) 
  AND 
  (`photos_likes`.`photo_id` = photo)
) AS 'Отозвано'
FROM `photos_likes` INNER JOIN `photos` INNER JOIN `users`
WHERE `photos_likes`.`photo_id` = photo AND
`photos_likes`.`user_id` = `users`.`id` AND
`photos`.`id` = photo
GROUP BY `photos_likes`.`photo_id`; 
END //
DELIMITER ;

mysql> CALL user_photo_quantity_likes (2);
+------------+-----------------+----------+
| Фотографии | Поставили лайки | Отозвано |
+------------+-----------------+----------+
| World      |               1 |        1 |
+------------+-----------------+----------+
1 row in set (1.10 sec)
Query OK, 0 rows affected (1.13 sec)


DELIMITER //
CREATE PROCEDURE user_photo_comment_quantity_likes (comment INT(11))
BEGIN 
SELECT `photos_comments`.`text` AS 'Комментарию',
SUM( 
  (`photos_comments_likes`.`recalled` IS NULL) 
  AND 
  (`photos_comments_likes`.`comment_id` = comment)
) AS 'Поставили лайки',  
SUM( 
  (`photos_comments_likes`.`recalled` IS NOT NULL) 
  AND 
  (`photos_comments_likes`.`comment_id` = comment)
) AS 'Отозвано'
FROM `photos_comments_likes` INNER JOIN `photos_comments` INNER JOIN `users`
WHERE
`photos_comments_likes`.`comment_id` = comment AND
`photos_comments_likes`.`user_id` = `users`.`id` AND
`photos_comments`.`id` = comment
GROUP BY `photos_comments_likes`.`comment_id`; 
END //
DELIMITER ;

mysql> CALL user_photo_comment_quantity_likes (3);
+-------------------+-----------------+----------+
| Комментарию       | Поставили лайки | Отозвано |
+-------------------+-----------------+----------+
| This is the worst |               1 |        1 |
+-------------------+-----------------+----------+
1 row in set (1.07 sec)
Query OK, 0 rows affected (1.07 sec)
